<h1 class='red-text darken-5'> Document a Dragon </h1>

<form action="/dragons" method="post">
        <div class="input-field">
          <input id="name" name="dragon[name]" type="text" class="validate">
          <label for="dragon[name]">Name</label>
        </div>
        <div class="input-field">
          <input id="color" name="dragon[color]" type="text" class="validate">
          <label for="color">Color</label>
        </div>
        <div class="input-field">
          <input id="breed]" name="dragon[breed]" type="text" class="validate">
          <label for="breed">Breed</label>
        </div>
        <div class="input-field">
          <input id="personality" name="dragon[personality]" type="text" class="validate">
          <label for="personality">Personality</label>
        </div>
        <div class="input-field">
          <input id="treasure" name="dragon[treasure]" type="text" class="validate">
          <label for="treasure">Treasure</label>
        </div>

        <input type="submit" value="Document Dragon" class="btn red darken-5">
</form>