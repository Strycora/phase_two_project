<h1 class='red-text darken-5'> Document a Dragon </h1>

<form action="/dragons" method="post">
        <div class="input-field">
          <input id="name" name="dragon[name]" type="text" class="validate">
          <label for="dragon[name]">Name:</label>
        </div>
        <h5> Color: </h5>
        <div class="input-field">
        <p>
            <label for="Red" >
            <input id="Red" name="dragon[color]" type="radio" value="Red" />
            <span>Red</span>
          </label>
        </p>
        <p>
            <label for="Yellow" >
            <input id="Yellow" name="dragon[color]" type="radio" value="Yellow" />
            <span>Yellow</span>
          </label>
        </p>
        <p>
            <label for="Green" >
            <input id="Green" name="dragon[color]" type="radio" value="Green" />
            <span>Green</span>
          </label>
        </p>
        <p>
            <label for="Black" >
            <input id="Black" name="dragon[color]" type="radio" value="Black" />
            <span>Black</span>
          </label>
        </p>
        <p>
            <label for="Blue" >
            <input id="Blue" name="dragon[color]" type="radio" value="Blue" />
            <span>Blue</span>
          </label>
        </p>
        <p>
            <label for="White" >
            <input id="White" name="dragon[color]" type="radio" value="White" />
            <span>White</span>
          </label>
        </p>
        <p>
            <label for="Purple" >
            <input id="Purple" name="dragon[color]" type="radio" value="Purple" />
            <span>Purple</span>
          </label>
        </p>
        </div>

          <div class="input-field col s12">
          <select name="dragon[breed]" >
            <option  value="" disabled selected>Choose Dragon Breed</option>
            <option value="Standard Western Dragon">Standard Western Dragon</option>
            <option value="Oriental Dragon">Oriental Dragon</option>
            <option value="Dragonnet">Dragonnet</option>
            <option value="Wyvern">Wyvern</option>
            <option value="Quetzalcoatl">Quetzalcoatl</option>
          </select>
          <label>Dragon Breed Selection</label>
         </div>
        
        
